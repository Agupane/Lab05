<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="Nombre Proyecto: " android:id="@+id/tvNombreProyecto" android:layout_marginEnd="70dp"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="text" android:id="@+id/etNombreProyecto"/>

    <Button
        android:text="Crear Proyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCrearProyecto" />


</LinearLayout>