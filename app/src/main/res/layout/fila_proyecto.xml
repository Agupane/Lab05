<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tareaTitulo"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/proyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreProyecto"
            android:layout_weight="1.0"
            tools:id="@id/tvNombreProyecto" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="@string/btnTextVerTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proyectoBtnVerTareas"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/proyectoBtnEditar"
            android:text="@string/editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
    />

        <Button
            android:text="@string/eliminar"
            android:id="@+id/proyectoBtnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            />
    </LinearLayout>
</LinearLayout>